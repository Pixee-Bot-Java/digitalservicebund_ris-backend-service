{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr"
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "timezone": "Europe/Berlin",
      "schedule": [
        "every weekday"
      ],
      "automerge": true,
      "platformAutomerge": false,
      "automergeType": "pr"
    }
  ]
}
