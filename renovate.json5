{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
    // not have a GitHub issue listing the open updates
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "gradle": {
        "enabled": true,
        "fileMatch": [
          "^build\\.gradle\\.kts$",
          "^settings\\.gradle\\.kts$"
        ],
        "repositories": [
          {
            "url": "https://maven.pkg.github.com/digitalservicebund/neuris-juris-xml-export",
            "username": "${{ GH_PACKAGES_REPOSITORY_USER }}",
            "password": "${{ GH_PACKAGES_REPOSITORY_TOKEN }}"
          }
        ]
      },
      "timezone": "Europe/Berlin",
      "schedule": [
        "every weekday"
      ],
      // branch creation only on weekdays
      "automerge": true,
      "platformAutomerge": false,
      // this would require more repository setup
      "automergeType": "pr"
      // only create PRs if tests fail (or stall)
    }
  ]
}
